<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="recyclerViewListStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layoutManager">androidx.recyclerview.widget.GridLayoutManager</item>
    </style>

    <style name="recipeListPortraitStyle" parent="recyclerViewListStyle">
        <item name="spanCount">@integer/portrait_columns_number</item>
    </style>

    <style name="recipeListLandscapeStyle" parent="recyclerViewListStyle">
        <item name="spanCount">@integer/landscape_columns_number</item>
    </style>

    <style name="recipeListTabletPortraitStyle" parent="recyclerViewListStyle">
        <item name="spanCount">@integer/portrait_tablet_columns_number</item>
    </style>

    <style name="recipeListTabletLandscapeStyle" parent="recyclerViewListStyle">
        <item name="spanCount">@integer/landscape_tablet_recipes_columns_number</item>
    </style>

    <style name="recipeDetailsListTabletLandscapeStyle" parent="recyclerViewListStyle">
        <item name="spanCount">@integer/landscape_tablet_details_columns_number</item>
    </style>

    <style name="listItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/item_padding</item>
        <item name="android:textSize">@dimen/item_text_size</item>
        <item name="android:background">@color/itemBackgroundColor</item>
    </style>

    <style name="recipeStepButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="recipePrevStepButtton" parent="recipeStepButton">
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:text">@string/prev_step_text</item>
    </style>

    <style name="recipeNextStepButtton" parent="recipeStepButton">
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:text">@string/next_step_text</item>
    </style>

    <style name="cardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_margin">@dimen/card_view_margin</item>
    </style>

    <style name="cardViewListItem" parent="cardView">
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="cardViewRecipeStepPort" parent="cardView">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">5</item>
    </style>

    <style name="cardViewRecipeStepTablet" parent="cardView">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="frameLayoutRecipesListFragment">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="progressBar">
        <item name="android:layout_width">@dimen/progress_bar_dimension</item>
        <item name="android:layout_height">@dimen/progress_bar_dimension</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="errorLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="errorTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="paddingStart">@dimen/error_message_horizontal_padding</item>
        <item name="paddingEnd">@dimen/error_message_horizontal_padding</item>
        <item name="android:text">@string/error_message</item>
        <item name="android:textSize">@dimen/error_message_text_size</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="refreshDataButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/refresh_button_margin_top</item>
        <item name="android:text">@string/refresh_button_text</item>
        <item name="buttonStyle">@style/TextAppearance.AppCompat.Button</item>
    </style>

    <style name="recipeDetailsRootLayout">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="recipeTabletFragment">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="recipeDetailsTabletPortFragment" parent="recipeTabletFragment">
        <item name="android:layout_weight">2</item>
    </style>

    <style name="recipeStepTabletPrtFragment" parent="recipeTabletFragment">
        <item name="android:layout_weight">1</item>
    </style>

    <style name="recipeDetailsTabletLandFragment" parent="recipeTabletFragment">
        <item name="android:layout_weight">1</item>
    </style>

    <style name="recipeStepTabletLandFragment" parent="recipeTabletFragment">
        <item name="android:layout_weight">2</item>
    </style>

</resources>
